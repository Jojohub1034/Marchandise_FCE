@model Marchandise_FCE.Models.Menvoi

@{
    ViewData["Title"] = "Facture";
}

<h2>Générer une Facture</h2>

<form asp-action="GeneratePdf" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="idexp" class="control-label"></label>
        <select asp-for="idexp" class="form-control" asp-items="ViewBag.idexp"></select>
    </div>
    <div class="form-group">
        <label asp-for="codegare" class="control-label"></label>
        <select asp-for="codegare" class="form-control" asp-items="ViewBag.codegare"></select>
    </div>
    <div>
        <label for="datedepart">Date de départ:</label>
        <input type="date" name="datedepart" required />
    </div>
    
    <div class="form-group">
            <input type="submit" value="GeneratePdf" class="btn btn-outline-success" />
    </div>
</form>
<div>
    
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
