@model Marchandise_FCE.Models.Menvoi
@using System.Globalization

@{
    ViewData["Title"] = "Create";
}

<h1>Nouvel envoi</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idexp" class="control-label"></label>
                <select asp-for="idexp" class ="form-control" asp-items="ViewBag.idexp"></select>
            </div>
            <div class="form-group">
                <label asp-for="codegare" class="control-label"></label>
                <select asp-for="codegare" class ="form-control" asp-items="ViewBag.codegare"></select>
            </div>
            <div class="form-group">
                <label asp-for="refmarch" class="control-label"></label>
                <select asp-for="refmarch" class ="form-control" asp-items="ViewBag.refmarch"></select>
            </div>
            <div class="form-group">
                <label asp-for="nbenvoi" class="control-label"></label>
                <input asp-for="nbenvoi" class="form-control" />
                <span asp-validation-for="nbenvoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="poids" class="control-label"></label>
                <input asp-for="poids" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="poids" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="type_embal" class="control-label"></label>
                <input asp-for="type_embal" class="form-control" />
                <span asp-validation-for="type_embal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
