@model IEnumerable<Marchandise_FCE.Models.Mcategorie>

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/styles.css" rel="stylesheet" />
<h1>Liste des catégories</h1>

   

<form method="get" asp-action="Index">
    <a asp-action="Create" class="btn btn-outline-primary">Nouveau</a>  | 
    <input type="text" name="recheche" placeholder="Recherche..." />
    <button type="submit" class="btn btn-primary">Rechercher</button>
</form>
<table class="table table-striped">

    <thead>
        <tr>
            <th>
                Code catégorie
            </th>
            <th>
                Designation
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.codcat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.designcat)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.codcat"><img class="modif" src="~/img/edit.png" /></a>                 |
                    <a asp-action="Delete" asp-route-id="@item.codcat"><img class="delete" src="~/img/delete.jpg" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
